{
  "extends": "@repo/typescript-config/base.json",
  "compilerOptions": {
    "resolveJsonModule": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@common/*": ["./src/common/*"],
      "@modules/*": ["./src/modules/*"]
    }
  },
  "exclude": [
    "**/*.spec.ts",
  ],
  "include": [
    "./src/**/*.ts"
  ]
}

